<web-app>
    <resource-ref>
        <description>Postgres data source</description>
        <res-ref-name>jdbc/users</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <servlet>
        <servlet-name>EchoServlet</servlet-name>
        <servlet-class>ru.job4j.servlets.EchoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Getting</servlet-name>
        <servlet-class>ru.job4j.crudservlet.servlets.Getting</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Creation</servlet-name>
        <servlet-class>ru.job4j.crudservlet.servlets.Creation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Removal</servlet-name>
        <servlet-class>ru.job4j.crudservlet.servlets.Removal</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Editing</servlet-name>
        <servlet-class>ru.job4j.crudservlet.servlets.Editing</servlet-class>
    </servlet>



    <servlet-mapping>
        <servlet-name>Getting</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Creation</servlet-name>
        <url-pattern>/user/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Removal</servlet-name>
        <url-pattern>/user/remove</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Editing</servlet-name>
        <url-pattern>/user/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EchoServlet</servlet-name>
        <url-pattern>/echo</url-pattern>
    </servlet-mapping>

</web-app>